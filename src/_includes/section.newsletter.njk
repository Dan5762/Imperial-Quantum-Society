{% for item in collections.sections %}
  {% if item.data.type === 'newsletter' %}
    <div id="newsletter" class="w-full min-h-screen flex flex-col bg-blue-100 justify-center items-center py-12">
      <div class="self-center text-center w-full sm:w-2/3 xl:w-1/2 px-4 sm:px:0">
        <h2 class="font-bold tracking-wider text-gray-800 text-4xl mb-4">{{ item.data.title }}</h2>
      </div>
      <div class="self-center w-full xl:w-4/5 flex flex-col sm:flex-row flex-wrap px-4 xl:px:0 pt-6">
        {% for item in newsletters %}
          <a class="w-full sm:w-1/3 flex flex-row hover:shadow-lg hover:bg-blue-800 hover:bg-opacity-50 px-4 sm:px-8 py-6 sm:py-12 pt-6" href="{{ item.link }}">
            <div class="w-2/3 xl:w-3/4">
              <h3 class="tracking-wide text-black-300 font-bold text-2xl mb-2">{{ item.title }}</h3>
            </div>
          </a>
        {% endfor %}
      </div>
      <img class="my-12 w-1/3 mx-auto" src="/img/undraw_newspaper_k-72-w.svg">
      <div class="flex flex-row w-full justify-center pt-6">
        <a class="px-10 py-2 text-gray-200 bg-blue-600 rounded-full shadow-md text-lg hover:bg-gray-800 hover:border-red" href="#podcasts">Podcast Recommendations</a>
      </div>
    </div>
  {% endif %}
{% endfor %}